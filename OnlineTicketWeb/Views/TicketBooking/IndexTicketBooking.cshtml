@model IEnumerable<OnlineTicketData.Models.TicketBooking>
<br />
<div class="container p-4 border">
    <div class="row pb-2">
        <div class="col">
            <h1 class="text-primary">TicketBooking List</h1>
        </div>
        <div class="col text-end pt-1">
            <a asp-controller="TicketBooking" asp-action="CreateTicketBooking" class="btn btn-outline-primary"><i class="bi bi-plus-square-fill"></i> Create New TicketBooking</a>
        </div>
    </div>

    <table class="table">
        <thead>
            <tr>
              
                <th>
                    NumberOfTicket
                </th>
               
                <th>
                    Event Name
                </th>
                <th>

                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.NumberOfTicket</td>
                   
                   <td>@item.Event.EventName</td>
                   
                    <td>
                        <a asp-controller="TicketBooking" asp-action="UpdateTicketBooking" asp-route-ticketId="@item.TicketId" class="btn btn-success"><i class="bi bi-pencil-square"></i>Update</a>
                        <a asp-controller="TicketBooking" asp-action="DeleteTicketBooking" asp-route-ticketId="@item.TicketId" class="btn btn-danger"><i class="bi bi-trash-fill"></i>Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

</div>

