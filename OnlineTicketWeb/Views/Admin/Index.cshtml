@model List<Event>

<h1>Pending Approval</h1>

@if (Model.Count == 0)
{
    <p>No events pending for approval.</p>
}
else
{
    <table>
        <thead>
            <tr>
                <th>EventName</th>
                <th>EventDate</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.EventName</td>
                    <td>@item.EventDate</td>
                    <td>
                        <a href="@Url.Action("Approve", "Admin", new { id = item.EventId })">Approve</a> |
                        <a href="@Url.Action("Reject", "Admin", new { id = item.EventId })">Reject</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
